/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.tabBar {
  position: fixed;
  display: flex;
  align-items: center;

  bottom: 0;
  background: #eee;
  height: 100rpx;
  width: 100%;
}
.left {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}
.tabBar_img {
  width: 80rpx;
  height: 80rpx;
}

.right {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}
.bar_btn {
  width: 300rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
}